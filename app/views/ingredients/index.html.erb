<div class="center">
<p id="notice"><%= notice %></p>

<h1>Ingredients</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.description %></td>
        <td><div class="btn-group">
              <%= link_to 'Mostrar', ingredient, :class => "btn btn-info" %></button>
              <%= link_to 'Editar', edit_ingredient_path(ingredient), :class => "btn btn-warning" %>
              <%= link_to 'Excluir', ingredient, :class => "btn btn-danger", method: :delete, data: {confirm: 'Are you sure?'} %></button>
              </div></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ingredient', new_ingredient_path, :class => "btn btn-success" %>
</div>